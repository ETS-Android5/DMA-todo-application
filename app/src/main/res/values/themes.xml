<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_primary</item>
        <item name="colorPrimaryVariant">@color/bg_primary</item>
        <item name="colorOnPrimary">@color/white_primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Search view text color -->
        <item name="android:editTextColor">@color/white_primary</item>
        <item name="android:textColorHint">@color/white_secondary</item>
    </style>
</resources>