<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/dimen_medium</item>
        <item name="android:textColor">@color/white_primary</item>
        <item name="android:background">@color/bg_secondary</item>
        <item name="android:textColorHint">@color/white_secondary</item>
        <item name="android:layout_marginBottom">@dimen/dimen_medium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_regular</item>
    </style>

    <style name="floating_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">@dimen/dimen_regular</item>
        <item name="android:backgroundTint">@color/yellow_primary</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="auth_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/blue_primary</item>
    </style>

    <style name="auth_redirect_text_style">
        <item name="android:textColor">@color/white_secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_regular</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="progressBar" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/blue_primary</item>
    </style>
</resources>